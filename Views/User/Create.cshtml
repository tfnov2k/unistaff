@model PerformanceEvaluation.Models.User
@{
    ViewData["Title"] = "Create New Staff";
}

<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" />

<h1 class="mb-2">Create New Staff</h1>
<form asp-action="Create" method="post" class="row gy-2 justify-content-center" style="max-width: 900px; margin: 0 auto;">
    <div class="col-12">
        <div class="card mb-2">
            <div class="card-header bg-black text-white py-2">
                Personal details
            </div>
            <div class="card-body row gy-2 p-2">
                <div class="col-md-6">
                    <label asp-for="FirstName" class="form-label"></label>
                    <span class="text-danger">*</span>
                    <input asp-for="FirstName" class="form-control form-control-sm" />
                    <span asp-validation-for="FirstName" class="text-danger"></span>
                </div>
                <div class="col-md-6">
                    <label asp-for="LastName" class="form-label"></label>
                    <span class="text-danger">*</span>
                    <input asp-for="LastName" class="form-control form-control-sm" />
                    <span asp-validation-for="LastName" class="text-danger"></span>
                </div>
                <div class="col-md-6">
                    <label asp-for="Title" class="form-label"></label>
                    <span class="text-danger">*</span>
                    <select asp-for="Title" class="form-select form-select-sm">
                        <option value="">Select Title</option>
                        <option value="Mr">Mr</option>
                        <option value="Mrs">Mrs</option>
                        <option value="Miss">Miss</option>
                    </select>
                    <span asp-validation-for="Title" class="text-danger"></span>
                </div>
                <div class="col-md-6">
                    <label asp-for="Gender" class="form-label"></label>
                    <span class="text-danger">*</span>
                    <div>
                        <div class="form-check form-check-inline">
                            <input class="form-check-input" type="radio" asp-for="Gender" value="Male" id="genderMale" />
                            <label class="form-check-label" for="genderMale">Male</label>
                        </div>
                        <div class="form-check form-check-inline">
                            <input class="form-check-input" type="radio" asp-for="Gender" value="Female" id="genderFemale" />
                            <label class="form-check-label" for="genderFemale">Female</label>
                        </div>
                    </div>
                    <span asp-validation-for="Gender" class="text-danger"></span>
                </div>
                <div class="col-md-6">
                    <label asp-for="DOB" class="form-label">Date of Birth</label>
                    <span class="text-danger">*</span>
                    <input asp-for="DOB" type="date" class="form-control form-control-sm" max="@DateTime.Today.ToString("yyyy-MM-dd")" />
                    <span asp-validation-for="DOB" class="text-danger"></span>
                </div>
            </div>
        </div>
    </div>
    <div class="col-12">
        <div class="card mb-2">
            <div class="card-header bg-black text-white py-2">
                Work details
            </div>
            <div class="card-body row gy-2 p-2">
                <div class="col-md-6">
                    <label asp-for="Department" class="form-label"></label>
                    <span class="text-danger">*</span>
                    <select asp-for="Department" class="form-select form-select-sm">
                        <option value="">Select Department</option>                     
                        <option value="FOICDT">Faculty of Information, Communication, and Digital Technologies</option>
                        <option value="FLM">Faculty of Law and Management</option>
                        <option value="FOE">Faculty of Engineering</option>
                        <option value="FOS">Faculty of Science</option>
                        <option value="FSSH">Faculty of Social Studies and Humanities</option>
                        <option value="FOA">Faculty of Agriculture</option>
                    </select>
                    <span asp-validation-for="Department" class="text-danger"></span>
                </div>
                <div class="col-md-6">
                    <label asp-for="Rank" class="form-label"></label>
                    <span class="text-danger">*</span>
                    <select asp-for="Rank" class="form-select form-select-sm">
                        <option value="">Select Rank</option>
                        <option value="Dean">Dean</option>
                        <option value="AssLect">Assistant Lecturer</option>
                        <option value="Lect">Lecturer</option>
                        <option value="SenLect">Senior Lecturer</option>
                        <option value="HOD">Head of Department</option>
                        <option value="Trainee">Trainee</option>
                        <option value="Other">Other</option>
                    </select>
                    <span asp-validation-for="Rank" class="text-danger"></span>
                </div>
                <div class="col-md-6">
                    <label asp-for="PhoneNo" class="form-label"></label>
                    <span class="text-danger">*</span>
                    <input asp-for="PhoneNo" class="form-control form-control-sm" />
                    <span asp-validation-for="PhoneNo" class="text-danger"></span>
                </div>
                <div class="col-md-6">
                    <label asp-for="Email" class="form-label"></label>
                    <span class="text-danger">*</span>
                    <input asp-for="Email" type="email" class="form-control form-control-sm" />
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>
            </div>
        </div>
    </div>
    <div class="col-12 text-center">
        <button type="submit" class="btn btn-primary btn-sm px-4">Submit</button>
    </div>
</form>
